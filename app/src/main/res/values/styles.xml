<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <!-- Base DARK theme. -->
    <style name="CalcDarkTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">#01579B</item>
        <item name="colorPrimary">@color/myBlue</item>
        <item name="shapeAppearanceSmallComponent">@style/JT.SmallShapeAppearance</item>
        <item name="colorSecondary">@color/myWhite</item>
    </style>


    <!-- NEW LIGHT theme. -->
    <style name="CalcLightTheme" parent="Theme.AppCompat.Light">
        <item name="shapeAppearanceSmallComponent">@style/JT.SmallShapeAppearance</item>
        <item name="android:windowBackground">#E6EFF6</item>
        <item name="colorPrimary">@color/myBlue</item>
        <item name="colorSecondary">@color/pitch_black</item>
        <!--  <item name="android:textStyle">italic</item> -->
    </style>


    <style name="LoginTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>
    </style>

    <!-- Buttons theme. -->
    <style name="MyRoundedCornerButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="background">@drawable/btn_selector</item>
        <item name="colorButtonNormal">#1a237e</item>
        <item name="colorControlHighlight">#673ab7</item>
    </style>

    <style name="MyPrimaryColoredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/myPeach</item>
        <item name="colorControlHighlight">@color/myRed</item>
    </style>

    <style name="MyFlatButton" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/myPeach</item>
        <item name="colorControlHighlight">@color/myRed</item>
    </style>

    <style name="MyPeachButton">
        <item name="android:layout_margin">@dimen/btn_margins</item>
        <item name="android:elevation">10dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textSize">@dimen/font_size_big</item>
        <item name="android:theme">@style/MyPrimaryColoredButton</item>
        <item name="android:translationZ">4dp</item>
    </style>

    <style name="MyCalcButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_margins</item>
        <item name="android:fontFamily">@font/jokerman</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorSecondary</item>
    </style>

    <style name="JT.CalcButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/btn_margins</item>
        <item name="android:fontFamily">@font/jokerman</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:textSize">@dimen/font_size_buttons</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="JT.SmallShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamilyTopLeft">rounded</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
        <item name="android:layout_margin">@dimen/btn_margins</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="cornerFamily">cut</item>-->
        <!--<item name="cornerSize">8dp</item>-->
    </style>

    <style name="JT.RoundedTextView" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>


</resources>